{
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      { "source": "/admin", "destination": "/admin.html" },
      { "source": "/login", "destination": "/login.html" },
      { "source": "**", "destination": "/index.html" }
    ]
  }
}
